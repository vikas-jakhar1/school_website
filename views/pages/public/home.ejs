<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= schoolName || "Adarsh Vidya Mandir" %></title>
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/"><%= schoolName || "Adarsh Vidya Mandir" %></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" 
      data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" 
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
        <li class="nav-item"><a class="nav-link" href="/admission">Admission</a></li>
        <li class="nav-item"><a class="nav-link" href="/notice">Notices</a></li>
        <li class="nav-item"><a class="nav-link" href="/gallery">Gallery</a></li>
        <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
      </ul>
    </div>
  </nav>

  <!-- Banner / Slider -->
  <div id="mainCarousel" class="carousel slide" data-ride="carousel" style="max-height: 400px; overflow: hidden;">
    <ol class="carousel-indicators">
      <% sliderImages.forEach((img, idx) => { %>
        <li data-target="#mainCarousel" data-slide-to="<%= idx %>" class="<%= idx === 0 ? 'active' : '' %>"></li>
      <% }) %>
    </ol>
    <div class="carousel-inner">
      <% sliderImages.forEach((img, idx) => { %>
        <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
          <img src="/uploads/slider/<%= img.filename %>" class="d-block w-100" alt="Slide <%= idx+1 %>" />
          <div class="carousel-caption d-none d-md-block">
            <h5><%= img.title || "" %></h5>
            <p><%= img.description || "" %></p>
          </div>
        </div>
      <% }) %>
    </div>
    <a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <!-- Welcome Section -->
  <section class="container my-5">
    <h2>Welcome to <%= schoolName || "Adarsh Vidya Mandir" %></h2>
    <p><%= schoolDescription || "Adarsh Vidya Mandir is committed to excellence in education and all-round development of students." %></p>
  </section>

  <!-- Notice Section -->
  <section class="bg-light py-4">
    <div class="container">
      <h3>Latest Notices</h3>
      <ul class="list-group">
        <% notices.forEach(notice => { %>
          <li class="list-group-item">
            <strong><%= notice.title %></strong> - <small><%= notice.date.toDateString() %></small><br />
            <%= notice.description.length > 100 ? notice.description.substring(0, 100) + '...' : notice.description %>
            <a href="/notice/<%= notice._id %>">Read More</a>
          </li>
        <% }) %>
      </ul>
    </div>
  </section>

  <!-- Achievements Section -->
  <section class="container my-5">
    <h3>Our Achievements</h3>
    <div class="row">
      <% achievements.forEach(a => { %>
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <% if (a.image) { %>
              <img src="/uploads/achievements/<%= a.image %>" class="card-img-top" alt="<%= a.title %>" />
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= a.title %></h5>
              <p class="card-text"><%= a.description.length > 150 ? a.description.substring(0,150)+'...' : a.description %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-dark text-white p-4 text-center">
    <p>&copy; <%= new Date().getFullYear() %> <%= schoolName || "Adarsh Vidya Mandir" %>. All rights reserved.</p>
    <p>Contact us: <%= contactEmail || "info@adarshvidyamandir.in" %> | Phone: <%= contactPhone || "+91-1234567890" %></p>
  </footer>

  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>