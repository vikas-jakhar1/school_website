<h2>Update School Info</h2>
<form method="POST" action="/admin/school">
  <label>Name</label><input type="text" name="name" value="<%= school.name || '' %>" /><br>
  <label>Tagline</label><input type="text" name="tagline" value="<%= school.tagline || '' %>" /><br>
  <label>Email</label><input type="email" name="email" value="<%= school.email || '' %>" /><br>
  <label>Phone</label><input type="text" name="phone" value="<%= school.phone || '' %>" /><br>
  <label>Address</label><textarea name="address"><%= school.address || '' %></textarea><br>
  <label>Session Year</label><input type="text" name="sessionYear" value="<%= school.sessionYear || '' %>" /><br>
  <button type="submit">Update</button>
</form>