<h2>Student List</h2>
<a href="/admin/students/add">Add Student</a>
<table border="1">
  <tr>
    <th>Name</th><th>Class</th><th>Roll No</th><th>Guardian</th><th>Actions</th>
  </tr>
  <% students.forEach(student => { %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.class %></td>
      <td><%= student.rollNo %></td>
      <td><%= student.guardianName %></td>
      <td>
        <a href="/admin/students/edit/<%= student._id %>">Edit</a> |
        <a href="/admin/students/delete/<%= student._id %>">Delete</a>
      </td>
    </tr>
  <% }) %>
</table>